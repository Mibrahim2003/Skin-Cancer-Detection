# DermaOps UI Dockerfile
# Streamlit dashboard for skin lesion classification

FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .

# Install Python dependencies (Streamlit + requests)
RUN pip install --no-cache-dir streamlit requests pandas Pillow

# Copy UI source code
COPY src/ui/ ./src/ui/

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV API_URL=http://api:8000/predict

# Expose Streamlit port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run Streamlit
CMD ["streamlit", "run", "src/ui/app.py", "--server.address", "0.0.0.0", "--server.port", "8501", "--browser.gatherUsageStats", "false"]
